@model List<Employee>

<div class="container mt-5">
    <h2 class="text-center text-danger mb-4">All Employees</h2>
    <div class="table-responsive">
        <table class="table table-striped ">
            <thead >
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Title</th>
                    <th scope="col">Age</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Title</td>
                        <td>@item.Age</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
